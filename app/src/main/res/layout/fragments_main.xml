<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:foreground="?android:selectableItemBackground"
    android:clickable="true"
    android:layout_margin="10dp"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    card_view:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circle_image"
            android:layout_width="@dimen/perfil_image_size"
            android:layout_height="@dimen/perfil_image_size"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar"
            app:border_color="@color/ImageBorder"
            app:border_width="2dp"
            android:layout_marginLeft="10dp"


            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="TITULO"
            android:id="@+id/Titulo"
            android:layout_marginLeft="80dp"
            android:layout_alignTop="@+id/circle_image"
            android:layout_alignLeft="@+id/NombresEstudiante"
            android:layout_alignStart="@+id/NombresEstudiante" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="03/07/2016"
            android:id="@+id/fechaNotificacion"
            android:layout_alignTop="@+id/circle_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="noombre del estudiante"
            android:id="@+id/NombresEstudiante"
            android:layout_alignBottom="@+id/circle_image"
            android:layout_centerHorizontal="true" />

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:background="@drawable/ic_menu_manage"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/fechaNotificacion"
            android:layout_alignEnd="@+id/fechaNotificacion"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp" />

    </RelativeLayout>






</android.support.v7.widget.CardView>